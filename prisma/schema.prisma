  @@map("user_reset")
}

model UserRole {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at")

  // Attributes
  state Int // like Draft/Publish?

  // Relations
  users UsersOnUserRoles[]
  roles RolesOnUserRoles[]

  @@map("user_role")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at")

  // Attributes
  nickName        String  @map("nick_name") @db.VarChar(255)
  firstName       String  @map("first_name") @db.VarChar(255)
  lastName        String  @map("last_name") @db.VarChar(255)
  documentType    Int     @map("document_type")
  documentId      Int     @map("document_id")
  gender          String  @db.VarChar(255)
  birthDate       Int?    @map("birth_date")
  birthCountry    String? @map("birth_country") @db.VarChar(255)
  birthState      String? @map("birth_state") @db.VarChar(255)
  birthCity       String? @map("birth_city") @db.VarChar(255)
  birthPostalCode Int?    @map("birth_postal_code")
  profile         Int?
  role            Int?
  phone           Int?
  email           String? @db.VarChar(255)
  password        String? @db.VarChar(255)
  status          Int?
  cellphone       Int?
  cellphonePrefix Int?    @map("cellphone_prefix")
  phonePrefix     Int?    @map("phone_prefix")
  profilePic      String? @map("profile_pic") @db.VarChar(255)
  state           Int // like Draft/Publish?

  // Relations
  countryId Int?               @map("country_id")
  storeId   Int?               @map("store_id")
  tableId   Int?               @map("table_id")
  userRoles UsersOnUserRoles[]

  @@map("user")
}

model UsersOnUserRoles {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      @map("user_id")
  userRole   UserRole @relation(fields: [userRoleId], references: [id])
  userRoleId Int      @map("user_role_id")

  @@id([userId, userRoleId])
  @@map("users_on_user_roles")
}

model RolesOnUserRoles {
  role       Role     @relation(fields: [roleId], references: [id])
  roleId     Int      @map("role_id")
  userRole   UserRole @relation(fields: [userRoleId], references: [id])
  userRoleId Int      @map("user_role_id")

  @@id([roleId, userRoleId])
  @@map("roles_on_user_roles")
}
